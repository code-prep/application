{{!-- Success message conditional --}}
{{#if success_msg}}
    <div class="alert alert-success alert-dismissible show fade">{{success_msg}}
        <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}

{{!-- for loop each message --}}
{{#if error_msg}}
    <div class="alert alert-danger alert-dismissible show fade">{{error_msg}}
        <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}